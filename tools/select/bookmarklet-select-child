javascript:!function(e,t,n){"use strict";if(!e||!t)throw new Error("$.uite.tools.select require '$.uite' framework");var r="select",o=0,i=n.selectors.styleID,s=$("#"+i);(!s||s.length<1)&&(s=$("<style>"),s.attr("id",i).html(n.styles),$("head").append(s)),e.tools.install({badge:$.extend({},n.badge),name:r,fn:{userSelect:function(){var e=$.trim(prompt("Please type jquery selector !"));return!e||e.length<1?!1:t(e).select()},selected:function(){return $("."+n.selectors.selected)},select:function(){return this.each(function(){$(this).hasClass(n.selectors.selected)||$(this).addClass(n.selectors.selected)})},setFlagToSelectOnclick:function(e){o=e>1||1==e?1:-1>e||-1==e?-1:0},toggleSelect:function(){return this.each(function(){$(this).toggleClass(n.selectors.selected)})},unSelect:function(){return this.each(function(){$(this).removeClass(n.selectors.selected)})},unSelectAll:function(){return t("."+n.selectors.selected).unSelect()}}},{click:function(e){e.preventDefault(),e.stopPropagation();var n=$(e.target);switch(o){case-1:t(n.parent()).toggleSelect();break;case 1:t(n.children()).toggleSelect();break;default:t(n).toggleSelect()}return!1},mouseover:function(e){e.preventDefault(),e.stopPropagation();var t=$(e.target);return t.hasClass(n.selectors.worker)||t.addClass(n.selectors.worker),t.parent().hasClass(n.selectors.parentWorker)||t.parent().addClass(n.selectors.parentWorker),!1},mouseout:function(e){e.preventDefault(),e.stopPropagation();var t=$(e.target);return t.removeClass(n.selectors.worker),t.parent().removeClass(n.selectors.parentWorker),!1}}),e.tools.uninstall(r,function(){$("*").removeClass(n.selectors.selected).removeClass(n.selectors.worker).removeClass(n.selectors.parentWorker),$("#"+n.selectors.styleID).remove()}),e.tools[r].onService()}(window.$U,window.$I,{badge:{name:"$.uite.tools.select",description:"Selector function for '$.uite' framework",version:"1.0.0",author:"Leonardo Ciaccio",contact:"leonardo.ciaccio@gmail.com",project:""},selectors:{styleID:"uite-sel